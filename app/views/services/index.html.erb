<div class="panel-heading">
    <br>
    <h1>Our offers:</h1>
    <div>
      <a class="btn btn-login" href="/services/new">Add a service!</a>
    </div>
    <br>
</div>

  <div class="card-map-align">
    <div class="card-container">
      <% @services.each do |service| %>
        <%= link_to service_path(service.id), class: 'banner-text' do %>
          <div class="card-trip">
            <img src='<%= cl_image_path service.photo.key, height: 300, crop: :fill %>') />
            <div class="card-trip-infos">
              <div>
                <h2><%= service.name %></h2>
              </div>
              <h2 class="card-trip-pricing">Price: <%= service.price %>â‚¬</h2>
              <%= cl_image_tag service.user.photo.key, class: "card-trip-user avatar-bordered" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div id="map"
      style="width: 100%; height: 785px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
  <br>
  <div class="navigators">
    <%= link_to root_path do %>
      <i class="fas fa-step-backward"></i>
    <% end  %>

    <%= link_to services_path do %>
      <i class="fas fa-arrow-up"></i>
    <% end  %>
  </div>
