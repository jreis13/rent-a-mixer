<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
<div class="logo-elements">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag 'rent-a-mixer-logo-final.png', style: 'height:7vh; width:auto; margin-left: 15px' %>
    <% end %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <div class="nav-link" id="navbarDropdown" data-toggle="dropdown" aria-haspopup='true' aria-expanded='false' style="font-size: 19px;">Services</div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "List services", services_path, class: "dropdown-item", style: "font-weight: lighter;" %>
            <%= link_to "Add a service", new_service_path, class:"dropdown-item", style: "font-weight: lighter;" %>
          </div>
        </li>
        <li class="nav-item dropdown">
          <div class="nav-link" id="navbarDropdown" data-toggle="dropdown" aria-haspopup='true' aria-expanded='false' style="font-size: 19px;">About us</div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Our team", about_us_path, class: "dropdown-item", style: "font-weight: lighter;" %>
            <%= link_to "Contact", contact_path, class:"dropdown-item", style: "font-weight: lighter;" %>
          </div>
        </li>
        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Edit your details", edit_user_registration_path, class: "dropdown-item", style: "font-weight: lighter;" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item", style: "font-weight: lighter;" %>
          </div>
        </li>
      <% else %>
          <%= link_to "Log-in", new_user_session_path, class:"nav-link" %>
          <%= link_to "Sign-up", new_user_registration_path, class:"nav-link-sign-up title" %>

      <% end %>
    </ul>
  </div>
</div>
